<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/md_theme_background</item>
        <item name="android:textColor">@color/md_theme_onBackground</item>
        <item name="android:strokeColor">@color/md_theme_onBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAppearance">@style/BaseBodyMedium</item>
        <item name="itemTextAppearanceActive">@style/GeologicaLight12</item>
        <item name="itemTextAppearanceInactive">@style/GeologicaLight12</item>
        <item name="itemPaddingTop">@dimen/bottom_view_item_padding_top</item>
        <item name="itemPaddingBottom">@dimen/bottom_view_item_padding_bottom</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/GeologicaMed16</item>
        <item name="hintTextAppearance">@style/TextFieldHintStyle</item>
    </style>

    <style name="NoStrokeTextInputStyle" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="boxBackgroundColor">@color/md_theme_background</item>
    </style>

    <style name="PriceTextInputLayoutStyle" parent="NoStrokeTextInputStyle">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="PriceEditTextStyle">
        <item name="hintEnabled">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textAppearance">@style/GeologicaRegular24</item>
    </style>

    <style name="SearchCardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/md_theme_background</item>
        <item name="contentPaddingLeft">@dimen/padding_medium</item>
        <item name="contentPaddingRight">@dimen/padding_medium</item>
        <item name="contentPaddingTop">@dimen/padding_large</item>
        <item name="contentPaddingBottom">@dimen/padding_large_32</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_medium</item>
    </style>

    <style name="TripCardViewStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
        <item name="contentPadding">@dimen/padding_medium</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_medium</item>
    </style>

    <style name="ProfileCardViewStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/md_theme_inverseOnSurface</item>
        <item name="contentPadding">@dimen/padding_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentPaddingTop">@dimen/padding_small</item>
        <item name="contentPaddingBottom">@dimen/padding_small</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_medium</item>
    </style>



    <style name="TripPriceCardViewStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
        <item name="contentPaddingLeft">@dimen/padding_small_12</item>
        <item name="contentPaddingRight">@dimen/padding_small</item>
        <item name="contentPaddingTop">@dimen/padding_extra_small</item>
        <item name="contentPaddingBottom">@dimen/padding_extra_small</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_small</item>
    </style>

    <style name="CardViewOnTripScreenStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/md_theme_background</item>
        <item name="contentPaddingLeft">@dimen/padding_medium</item>
        <item name="contentPaddingRight">@dimen/padding_medium</item>
        <item name="contentPaddingTop">@dimen/padding_medium</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPaddingBottom">@dimen/padding_medium</item>
    </style>

    <style name="BlurCardViewOnImageStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/background_blur</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_small</item>
        <item name="contentPaddingLeft">@dimen/margin_medium</item>
        <item name="contentPaddingRight">@dimen/margin_medium</item>
    </style>

    <style name="FocusMaterialButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_states</item>
        <item name="backgroundTint">@null</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:maxWidth">@dimen/button_max_width</item>
        <item name="android:textAppearance">@style/GeologicaLight14</item>
        <item name="android:textColor">@color/button_text_tint</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/card_corner_small</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textAppearance">@style/GeologicaReg16</item>
    </style>

    <style name="FilledButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/card_corner_small</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textAppearance">@style/GeologicaReg16</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">@dimen/text_button_height</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textAppearance">@style/GeologicaReg16</item>
    </style>

    <style name="SmallFabButtonStyle" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="strokeColor">@color/md_theme_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="UnderlineEditTextStyle">
        <item name="android:inputType">textCapSentences|textAutoComplete</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">@dimen/margin_extra_small</item>
        <item name="android:paddingEnd">@dimen/margin_extra_small</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:textAppearance">@style/TextFieldTextStyle</item>
        <item name="android:textColorHint">@color/grey_focus</item>
    </style>

    <style name="UnderlineTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
    </style>

    <!--  Стиль для полноэкранных диалогов-->
    <style name="FullScreenDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@color/grey_dialog_background</item>
    </style>

    <style name="AddressEditTextStyle">
        <item name="android:inputType">textCapSentences|textAutoComplete</item>
        <item name="android:lines">1</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textAppearance">@style/TextFieldTextStyle</item>
    </style>
</resources>