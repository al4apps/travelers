<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/yellow_green_pressed_button_start"
                android:endColor="@color/yellow_green_pressed_button_end"
                android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/grey_disabled_button" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/yellow_focus_start"
                android:endColor="@color/yellow_focus_end"
                android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>