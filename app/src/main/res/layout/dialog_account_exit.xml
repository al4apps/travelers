<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@color/light_grey_focus">

    <com.google.android.material.card.MaterialCardView
        style="@style/DialogCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_account_exit_text"
                android:paddingBottom="@dimen/padding_medium"
                android:textAlignment="center"
                android:textAppearance="@style/GeologicaRegular20" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small_10"
                android:padding="@dimen/padding_extra_small">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    style="@style/OutlinedButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/cancel_button_text"
                    tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

                <View
                    android:layout_width="@dimen/margin_large"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_extra_small"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exitButton"
                    style="@style/FilledButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="@string/dialog_exit_button_text"
                    tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.appcompat.widget.LinearLayoutCompat>